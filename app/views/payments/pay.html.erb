<%= form_for @payment, url: payments_create_path do |p| %>
    <%= p.label "Introduzca Numero de Tarjeta"  %>
    <%= p.number_field :cardnumber  %><p>
    <%= p.label "Fecha de Expiración"  %>
    <%= p.date_field :due_date  %><p>
    <%= p.label "Tipo de Tarjeta" %>
    <%=	 p.select(:cardtype, @tarjetas) %><p>
    <%= p.label "Nombre de Tarjetahabiende"  %>
    <%= p.text_field :cardname  %><p>

    <%= p.label "Código de Seguridad"  %>
    <%= p.text_field :codesecurity  %><p>

    <%= p.hidden_field :pay_date, :value => Date.today %>
    <%= p.hidden_field :billing_id, :value => @bill.id %>
    <%= p.button  :submit , name: "id",value: @bill.id%>
<% end %>