<div class="container">
  <div class="row">
    <div class="col-sm-12 moviebar">
      <div class="again180">Registro de Nuevo Usuario</div>
    </div>
  </div>
  <div class="wrapeador">
    <div class="row">
      <div class="col-sm-offset-1 col-sm-2">
        <%= form_for @user, url: users_registers_create_path do |p| %>
            <div class="form-group">
                <div><%= p.label "Nombres" %></div>
                <%= p.text_field :name %>
            </div>

            <div class="form-group">
                <div><%= p.label "Apellidos"  %></div>
                <%= p.text_field(:lastname) %>

            </div>
            <div class="form-group">
                <div><%= p.label "Número_de_cedula"  %></div>
                <%= p.text_field(:ci) %>
            </div>
            <div class="form-group">
                <div><%= p.label "Correo_electrónico" %></div>
                <%=	 p.text_field (:email) %>
            </div>

      </div>

      <div class="col-sm-2">
          <div class="form-group">
                <div><%= p.label "Teléfono_fijo" %></div>
                <%=  p.number_field (:phone) %>
                </div>

          <div class="form-group">
              <div><%= p.label "Teléfono_movil"  %></div>
                <%= p.number_field :cel %><p>
           </div>


            <div class="form-group">
              <div><%= p.label "Clave"  %></div>
                <%= p.password_field :password  %><p>
           </div>
            <br>

           <%= p.button  :submit , name: "id",value: @user.id, :class => 'btn btn-success'%>

            <%= link_to "Volver al Menu", :root%>


        <% end %>
      </div>
    </div>
  </div>
</div>